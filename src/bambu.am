if BUILD_LIB_PRAGMA
  bambu_CPPFLAGS += \
     -I$(top_srcdir)/src/design_flows/codesign \
     -I$(top_srcdir)/src/pragma
endif

if BUILD_TRNG
   bambu_CPPFLAGS += \
      -isystem $(top_builddir)/ext/trng-4.17
endif

