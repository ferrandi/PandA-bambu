{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Buildenv setup",
         "type": "shell",
         "command": "make",
         "args": [
            "-f",
            "Makefile.init",
            "appimage-setup",
            "APP_COMPILERS=gcc-4.5,gcc-4.6,gcc-4.7,gcc-4.8,gcc-4.9,gcc-5,gcc-6,gcc-7,gcc-8,clang-4,clang-5,clang-6,clang-7,clang-8,clang-9,clang-10,clang-11,clang-12,clang-13,clang-16"
         ],
         "problemMatcher": "$gcc"
      },
      {
         "label": "Build AppImage",
         "type": "shell",
         "command": "make",
         "args": [
            "-f",
            "Makefile.init",
            "appimage-build",
            "APP_CONFIGURE=\"--skip-package --enable-flopoco --enable-glpk --enable-opt --enable-release --enable-Werror CC=gcc-8 CXX=g++-8\"",
            "J=4"
         ],
         "problemMatcher": "$gcc",
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "Launch buildenv shell",
         "type": "shell",
         "command": "make",
         "args": [
            "-f",
            "Makefile.init",
            "buildenv-shell"
         ],
         "problemMatcher": []
      }
   ]
}